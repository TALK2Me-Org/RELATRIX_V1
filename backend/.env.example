# Admin
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="your-admin-password"

# AWS Bedrock (optional)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_DEFAULT_REGION="eu-central-1"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# Database - SQLite for local development
DATABASE_URL="sqlite:///./relatrix.db"
# For PostgreSQL: DATABASE_URL="postgresql://postgres:postgres@localhost:5432/relatrix"

# Redis (optional for local)
REDIS_URL="redis://localhost:6379"

# API Keys
OPENAI_API_KEY="sk-proj-your-openai-key"
MEM0_API_KEY="m0-your-mem0-key"
MEM0_USER_ID="org_your-mem0-org-id"
ZEP_API_KEY="z_your-zep-key"

# Supabase
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Security
JWT_SECRET_KEY="your-secret-key-change-in-production"
SUPABASE_JWT_SECRET="your-supabase-jwt-secret"

# Cost Management
MONTHLY_BUDGET_LIMIT="100.0"
COST_ALERT_THRESHOLD="0.8"

# Debug
DEBUG="FALSE"
RAILWAY_ENVIRONMENT="local"